<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="30dp"
    android:layout_marginBottom="30dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/pink">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/item_time_clocky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/ps_light"
            android:text="@string/txt_time1"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_date_clocky"
            android:text="@string/txt_date1"
            android:textColor="@color/white"
            android:fontFamily="@font/ps_extralight"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/item_time_clocky"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="1dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alarm_switch"
            android:thumb="@drawable/switch_thumb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:track="@drawable/switch_track"/>






    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>